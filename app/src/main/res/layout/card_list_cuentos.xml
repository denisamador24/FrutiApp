<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardListCuento"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/CardViewListItem"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="#FDEB4F"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cardMenuMain_imageView"
            android:layout_width="272dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_cuentos"/>

        <TextView
            android:id="@+id/cardList_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cuentos"
            style="@style/TextMd"
            android:textStyle="bold"
            android:layout_marginVertical="4dp"
            android:textAlignment="center"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>